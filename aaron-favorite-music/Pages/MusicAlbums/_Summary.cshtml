@using aaron_favorite_music_domain;
@model MusicAlbum

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.AlbumName</h3>
    </div>
    <div class="panel-body">
        <span>Description: @Model.Description</span>
        <span>Genre: @Model.Genre</span>
    </div>
    <div class="panel-footer">
             <a class="btn btn-lg" 
                        asp-page="./Detail" 
                        asp-route-musicAlbumId="@Model.Id">
                    <i class="glyphicon glyphicon-zoom-in"></i>
                </a>
                <a class="btn btn-lg" 
                        asp-page="./Edit" 
                        asp-route-musicAlbumId="@Model.Id">
                    <i class="glyphicon glyphicon-edit"></i>
                </a>
                <a class="btn btn-lg" 
                        asp-page="./Delete" 
                        asp-route-musicAlbumId="@Model.Id">
                    <i class="glyphicon glyphicon-trash"></i>
                </a>
    </div>    
</div>
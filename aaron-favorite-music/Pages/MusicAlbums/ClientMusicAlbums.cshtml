    ViewData["Title"] = "ClientMusicAlbums";
}

<h2>Client Music Albums</h2>

<table class="table" id="MusicAlbums"></table>
@section Scripts {

    <environment include="Development">
       Â <script src="~/node_modules/datatables.net/js/jquery.dataTables.js"></script>
        <script src="~/node_modules/datatables.net-bs/js/dataTables.bootstrap.js"></script>
        <link rel="stylesheet" href="~/node_modules/datatables.net-bs/css/dataTables.bootstrap.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.18/datatables.min.css"/> 

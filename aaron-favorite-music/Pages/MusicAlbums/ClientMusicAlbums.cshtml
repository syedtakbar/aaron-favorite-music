    </environment>
    <script> 
        $(function() {
            $.ajax("/api/MusicAlbums", 
                {method:"get"})
                .then(function(response){
                    console.dir(response);
                    $(#dataTables.bootstrap).dataTables({
                        data: response,
                        columns: [
                            {data: "AlbumName"},
                            {data: "Description"},
                            {data: "Artist"},
                            {data: "YearRelease"},
                            {data: "Genre"}
                        ]
                    });
                });
        });
        
    </script>

}